{
  "name": "prevent-scrolling",
  "version": "1.3.1",
  "description": "Prevent scrolling while optionally allowing scrolling on specified elements",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Ben Meyrick <bameyrick@gmail.com>",
  "license": "MIT",
  "keywords": ["scroll", "lock", "overflow", "overscroll", "prevent"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bameyrick/prevent-scrolling.git"
  },
  "scripts": {
    "lint": "tslint --project tslint.json",
    "lint-staged": "lint-staged",
    "npm-bundle": "yarn tidy-clean && yarn lint && tsc -p ./ --outDir dist/",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "tidy-clean": "rm -rf ./dist",
    "dedupe-deps": "npx yarn-deduplicate yarn.lock && yarn"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn tidy-clean"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tslint.json",
      "prettier --print-width 140 --single-quote --trailing-comma es5 --parser typescript --write",
      "git add"
    ],
    "*.json": ["prettier --print-width 140 --single-quote --trailing-comma es5 --parser json --write", "git add"]
  },
  "devDependencies": {
    "@types/ua-parser-js": "^0.7.32",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "tslint": "^5.8.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "prevent-overscrolling": "^1.1.0",
    "ua-parser-js": "^0.7.20"
  }
}
