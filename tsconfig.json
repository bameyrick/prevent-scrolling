{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["es2017.object", "es2015", "es2017", "dom"]
  },
  "exclude": ["node_modules", "dist/"],
  "include": ["src/**/*"]
}
